<%= form_with model: image, multipart: true do |form| %>
  <%= render "devise/shared/error_messages", resource: image %>

  <div class="form-outline mb-4 lh-1">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control shadow-sm" %>
  </div>

  <div class="form-group file-upload-wrapper mb-4 lh-1">
    <%= form.label :image, class: "form-label" %>
    <%= form.file_field :file, class: "form-control border-2 rounded-5" %>
  </div>

  <div class="form-group d-flex justify-content-end">
    <%= form.submit 'Upload', class: "btn btn-dark bg-tagger" %>
  </div>
<% end %>
