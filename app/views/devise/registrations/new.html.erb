<div class="container p-5">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="card shadow p-5" style="max-width: 800px; border-radius: 8px;">
      <div class="card-body">
        <div class="card-title text-center mb-4">
          <h2>Sign up to Tagger</h2>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-outline mb-4 lh-1">
            <%= f.label :email, class: "form-label mb-0" %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
          </div>

          <div class="form-outline mb-4 lh-1">
            <%= f.label :password, class: "form-label mb-0" %><br>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg shadow-sm" %>
          </div>

          <div class="form-outline mb-4 lh-1">
            <%= f.label :password_confirmation, class: "form-label mb-0" %><br>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg shadow-sm" %>
          </div>

          <div class="form-group d-flex justify-content-between align-items-center">
            <%= render "devise/shared/links" %>
            <%= f.submit "Sign up", class: "btn btn-dark bg-tagger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
