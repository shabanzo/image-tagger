<div class="container p-5">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="card shadow p-5" style="max-width: 800px; border-radius: 8px;">
      <div class="card-body">
        <div class="card-title text-center mb-4">
          <h2>Sign in to Tagger</h2>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-outline mb-4 lh-1">
            <%= f.label :email, class: "form-label mb-0" %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg shadow-sm" %>
          </div>

          <div class="form-outline mb-4 lh-1">
            <%= f.label :password, class: "form-label mb-0" %><br>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg shadow-sm" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check d-flex justify-content-start mb-4">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label", style: "margin-left: 5px;" %>
            </div>
          <% end %>

          <div class="form-group d-flex justify-content-between align-items-center">
            <%= render "devise/shared/links" %>
            <%= f.submit "Sign in", class: "btn btn-dark bg-tagger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
